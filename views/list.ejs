<!DOCTYPE html>
<html lang="en">
    <head>
        <title>To Do</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
        <link rel="stylesheet" href="css/style.css">
        
    </head>
    <body class="bgimg">
        
        <div class="box first">
            <h1>To Do list</h1>
        </div>
        <div class="box">
            <% if(ejes.length == 0){ %>
                <h4>Enter Task!!!</h4>
            <% } %>
            <% ejes.forEach(function(Item){ %>
                <form action="/delete" method="post">
                    <div class="item-row border-bottom">
                        <input type="checkbox" name="del_todo" value="<%= Item._id %>" class="task-checkbox" onchange="this.form.submit()">
                        <p class="task-text"><%= Item.name %></p>
                    </div>
                </form>
            <% }) %>
            

            <form action="/" method="post">
                <input type="text" name="ele1" placeholder="Enter the task...">
                <button type="submit">+</button>
            </form>
        </div>
        
        
    </body>
</html>